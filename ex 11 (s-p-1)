// This program will check if a word is in a message

import java.util.Scanner;

public class Project {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter the message: ");
        String message = scanner.nextLine();
        System.out.println("Enter the word to be found: ");
        String word = scanner.nextLine();
        boolean found = message.contains(word);
        if (found) {
            System.out.println("The word " + word + " was found in the message.");
        } else {
            System.out.println("The word " + word + " was not found in the message.");
        }
        scanner.close();
    }
}
